{
  "manifest_version": 2,
  "name": "What I Consumed",
  "version": "1.0.0",
  "description": "Track text and video content you consume on the web",
  "browser_specific_settings": {
    "gecko": {
      "id": "whaticonsumed@ethanpineda.com"
    }
  },
  "permissions": ["activeTab", "tabs", "storage", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
